<!DOCTYPE html>
<html lang="es-co">
<head>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Animal Country</title>

</head>
<body>
    <header>

        <div class="navbar-fixed">
            <nav class="deep-purple darken-2">
                <div class="nav-wrapper container">
                    <a asp-area="" asp-page="/Index" class="brand-logo">Animal Country</a>
                    <a asp-area="" asp-page="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                    <ul class="right hide-on-med-and-down white-text">
                        <li><a asp-area="" asp-page="/Index">Home</a></li>
                        <!--<li><a asp-area="" asp-page="/Privacy">Privacy</a></li>-->
                        <li><a asp-area="" asp-page="/Propietarios/Index">Propietarios</a></li>
                        <li><a asp-area="" asp-page="/Pacientes/Index">Pacientes</a></li>
                    </ul>
                </div>
            </nav>
        </div>

        <ul class="sidenav" id="mobile-demo">
            <li><a asp-area="" asp-page="/Index">Home</a></li>
            <!--<li><a asp-area="" asp-page="/Privacy">Privacy</a></li>-->
            <li><a asp-area="" asp-page="/Propietarios/Index">Propietarios</a></li>
            <li><a asp-area="" asp-page="/Pacientes/Index">Pacientes</a></li>
        </ul>



    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Animal Country - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="~/js/materialize.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
