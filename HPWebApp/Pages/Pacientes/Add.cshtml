@page
@model HPWebApp.Pages.Pacientes.AddModel
@{
    ViewData["Title"] = "Add";
}

<h3 class="center-align indigo-text text-darken-2">Nuevo Paciente</h3>

<br />

<div class="row">
    <form method="post" class="col s12">
        <input asp-for="@Model.PropietarioId" />

        <div>
            <div class="row">
                <div class="input-field col s12 m3 l3">
                    <input id="nombre" type="text" class="validate" asp-for="Paciente.Nombre">
                    <label for="nombre">Nombre</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="color" type="text" class="validate" asp-for="Paciente.Color">
                    <label for="color">Color</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="senas_particulares" type="text" asp-for="Paciente.SenasParticulares">
                    <label for="senas_particulares">Señas Particulares</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="zona" type="text" asp-for="Paciente.Zona">
                    <label for="zona">Zona</label>
                </div>
            </div>
        </div>

        <div>
            <div class="row">
                <div class="input-field col s12 m3 l3">
                    <input id="chip" type="text" asp-for="Paciente.Chip">
                    <label for="chip">Chip</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="numero_chip" type="text" asp-for="Paciente.NumeroChip">
                    <label for="numero_chip">Número Chip</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="fecha_nacimiento" type="text" class="datepicker" asp-for="Paciente.FechaNacimiento">
                    <label for="fecha_nacimiento">Fecha Nacimiento</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="fecha_defuncion" type="text" class="datepicker" asp-for="Paciente.FechaDefuncion">
                    <label for="fecha_defuncion">Fecha Defunción</label>
                </div>
            </div>
        </div>

        <div>
            <div class="row">

                <div class="input-field col s12 m6 l6">
                    <input id="motivo_defuncion" type="text" asp-for="Paciente.MotivoDefuncion">
                    <label for="motivo_defuncion">Motivo Defunción</label>
                </div>
                <div class="input-field col s12 m6 l6">
                    <input id="observacion" type="text" asp-for="Paciente.Observacion">
                    <label for="observacion">Orservación 2</label>
                </div>
            </div>
        </div>

        <div class="center-align">
            <button type="submit"
                    class="btn-floating btn waves-effect waves-light white-text blue darken-2 ">
                <i class="material-icons">save</i>
            </button>
            <a asp-page="./Index"
               class="btn-floating btn waves-effect waves-light white-text blue darken-2 ">
                <i class="material-icons">cancel</i>
            </a>
        </div>

    </form>
</div>

