@page
@model HPWebApp.Pages.Propietarios.IndexModel
@addTagHelper`*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}


<h3 class="center-align indigo-text text-darken-2">Pripietaios</h3>

<br />

<div>
    <a asp-page="../Index"
       class="btn-floating btn waves-effect waves-light white-text blue darken-2 left-align">
        <i class="material-icons">arrow_back</i>
    </a>

    <a asp-page="Add"
       class="btn-floating waves-effect waves-light white-text blue darken-2 right-align">
        <i class="material-icons">add</i>
    </a>
</div>

<br />

<form method="post">
    <table class="responsive-table striped">
        <thead>
            <tr class="light white-text card-panel indigo darken-2 card-content">
                <th class="center">Nombre</th>
                <th class="center">TipoDocumento</th>
                <th class="center">Identificacion</th>
                <th class="center">Ciudad</th>
                <th class="center">Celular</th>
                <th class="center">Nombre Paciente</th>
                <th class="center">Editar</th>
                <th class="center">Eliminar</th>
                <th class="center">Crear Paciente</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Propietarios)
            {
            <tr>
                <td class="center">@item.PrimerNombre @item.PrimerApellido</td>
                <td class="center">@item.TipoIdentificacion</td>
                <td class="center">@item.Identificacion</td>
                <td class="center">@item.Ciudad</td>
                <td class="center">@item.Celular1</td>
                <td class="center">
                    @foreach (var p in @item.PropietarioPacientes)
                    {
                        <span>@p.Paciente.Nombre</span>
                    }
                </td>

                <td class="center">
                    <a asp-route-id="@item.Id"
                       asp-page="Edit"
                       class="btn-floating btn waves-effect waves-light white-text blue darken-2 centrar">
                        <i class="material-icons">edit</i>
                    </a>
                </td>


                <td class="center">
                    <button type="submit"
                            asp-page-handler="delete"
                            asp-route-id="@item.Id"
                            class="btn-floating btn waves-effect waves-light white-text blue darken-2">
                        <i class="material-icons">delete_forever</i>
                        >
                    </button>
                </td>

                <td class="center">
                    <a asp-route-propietarioid="@item.Id"
                       asp-page="../Pacientes/Add"
                       class="btn-floating pulse btn waves-effect waves-light white-text blue darken-2">
                        <i class="material-icons">pets</i>
                    </a>
                </td>


            </tr>
            }
        </tbody>
    </table>
</form>
